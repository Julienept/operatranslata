{% extends 'base.html.twig' %}

{% block title %}Hello ThemeController!{% endblock %}

{% block body %}
{% include "layout/nav.html.twig" %}

<div class="container mt-5">


  <!--Section: Content-->
  <section class="dark-grey-text text-center">

    <style>
      .md-pills .nav-link.active {
        background-color: #3f51b5;
      }
    </style>
    
    <!-- Section heading -->
    <h3 class="font-weight-bold mb-4 pb-2">Les illustrations</h3>
    <!-- Section description -->
    <p class="text-muted w-responsive mx-auto mb-5">Ensemble des illustrations par thème</p>
    
      <!--First row-->
      <div class="row">
        
        <!--First column-->
        <div class="col-12">
          
          <!-- Nav tabs -->
          <ul class="nav md-pills flex-center flex-wrap mx-0" role="tablist">
            <li class="nav-item">
              <a class="nav-link active font-weight-bold" data-toggle="tab" href="#panel31" role="tab">Tout voir</a>
            </li>
            {% for themeName in themes %}
            <li class="nav-item">
              <a class="nav-link font-weight-bold" data-toggle="tab" href="#panel32" role="tab">{{ themeName.name }}</a>
            </li>
            {% endfor %}
            
          </ul>
          
        </div>
        <!--First column-->

    </div>
    <!--First row-->
    
    <!--Tab panels-->
    <div class="tab-content">

      <!--Panel 1-->
      <div class="tab-pane fade show in active" id="panel31" role="tabpanel">

        <!--First row-->
        <div class="row">
          
          {% for image in images %}
          <!--First column-->
          <div class="col-lg-4 col-md-12 mb-4">
            <!--Featured image-->
            {% set url = 'images/LDOEHEM/' ~ image.url ~ '.jpg' %}
            {{ dump(image)}}
            <div class="view overlay zoom z-depth-2">
              <img src="{{ asset(url)}}" class="img-fluid">
            </div>
            <p class="text-uppercase text-center font-weight-bold text-muted my-4">{{ image.title}}</p>
            <p class="text-center text-muted my-4">Issue du livre <em>{{ image.book.title }}</em>, page n°{{ image.pageNumber }}</p>

          </div>
          {% endfor %}
          <!--First column-->
          
        </div>
        <!--First row-->

      </div>
      <!--Panel 1-->

     
    </div>
    <!--Tab panels-->

	</section>
  
  
</div>
{% include "layout/footer.html.twig" %}

{% endblock %}
