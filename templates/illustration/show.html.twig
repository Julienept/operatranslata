{% extends 'base.html.twig' %}

{% block title %}{{ image.title }}{% endblock %}

{% block body %}

{% include "layout/nav.html.twig" %}
  <div class="container my-5 py-5 z-depth-1">

 
    <!--Section: Content-->
    <section class="px-md-5 mx-md-5 dark-grey-text text-center text-lg-left">

      <!--Grid row-->
      <div class="row">

        <!--Grid column-->
        <div class="col-lg-6 mb-4 mb-lg-0 d-flex align-items-center justify-content-center">

          <img src="{{ asset(image.imgUrl)}}" class="img-fluid" alt="">

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-lg-6 mb-4 mb-lg-0">

          <h3 class="font-weight-bold">{{ image.title }}</h3>

          <p class="font-weight-bold">{{ image.book.title }}, 
          {% for author in image.book.author %}
          {{ author.firstname }} {{ author.name }}
          {% endfor %}
          {{ image.book.publicationDate }}</p>

          <p class="text-muted" style="text-align: justify">"{{ image.description }}"</p>

        {% if image.book.translated %}
          <a class="font-weight-bold" href="{{ path('book_show', { 'id': image.book.id})}}" >Accéder à l'oeuvre traduite<i class="fas fa-angle-right ml-2"></i></a>
        {% else %}
            <a class="font-weight-bold" href="#" >Accéder à l'oeuvre originale<i class="fas fa-angle-right ml-2"></i></a>
        {% endif %}
        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->


    </section>
    <!--Section: Content-->


  </div>


</div>
{% include "layout/footer.html.twig" %}

{% endblock %}
